<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="16dp"
    tools:context=".fragment.KuisFragment">

    <ImageView
        android:id="@+id/img_kuis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="24dp"
        android:src="@drawable/kuis"
        app:layout_constraintBottom_toTopOf="@+id/btn_back"
        app:layout_constraintDimensionRatio="572:806"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_mainkan"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/btn_mainkan"
        app:layout_constraintBottom_toBottomOf="@+id/img_kuis"
        app:layout_constraintDimensionRatio="841:214"
        app:layout_constraintLeft_toLeftOf="@+id/img_kuis"
        app:layout_constraintRight_toRightOf="@+id/img_kuis" />

    <ImageView
        android:id="@+id/btn_profile"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_profil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:src="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>